
<div class="col-sm-12">
    <div class="panel-heading"><i class="fa fa-map-marker-alt"></i> @Resources.Address</div>
    <div class="panel panel-default">
        <div class="panel-body">
            <form id="form-address">
                <div class="row">
                    <div class="col-xs-6 col-sm-12 col-lg-6">
                        <label for="typeOfAddress" class="col-sm-4 required">@Resources.TypeOfAddress</label>
                        <div class="col-sm-8">
                            @Helpers.BootstrapDropdown("typeOfAddress", false, true)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6 col-sm-12 col-lg-6">
                        <label for="postalCode" class="col-sm-4 required">@Resources.PostalCode</label>
                        <div class="col-sm-8">
                            <input type="text" class="width_100p" id="postalCode" name="postalCode" maxlength="8" required>
                        </div>
                    </div>

                    <div class="col-xs-6 col-sm-12 col-lg-6">
                        <label for="country" class="col-sm-4 required">@Resources.Country</label>
                        <div class="col-sm-8">
                            @Helpers.BootstrapDropdown("country", false, true)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6 col-sm-12 col-lg-6">
                        <label for="street" class="col-sm-4 required">@Resources.Address</label>
                        <div class="col-sm-8">
                            <input maxlength="100" type="text" class="width_100p addressEditor" id="street" name="street" required>
                            @*@Helpers.BootstrapDropdown("streetCombo", false, false, cssClasses: "addressCombo")*@
                        </div>
                    </div>

                    <div class="col-xs-6 col-sm-12 col-lg-6">
                        <label for="door" class="col-sm-4 required">@Resources.Door</label>
                        <div class="col-sm-8">
                            <input maxlength="5" type="text" class="width_100p" name="door" id="door" required>
                        </div>
                    </div>

                    <div class="col-xs-6 col-sm-12 col-lg-6">
                        <label for="floor" class="col-sm-4">@Resources.Floor</label>
                        <div class="col-sm-8">
                            <input maxlength="10" type="text" class="width_100p" id="floor" name="floor">
                        </div>
                    </div>

                    <div class="col-xs-6 col-sm-12 col-lg-6">
                        <label for="district" class="col-sm-4 required">@Resources.District</label>
                        <div class="col-sm-8">
                            @Helpers.BootstrapDropdown("district", true, true)
                        </div>
                    </div>

                    <div class="col-xs-6 col-sm-12 col-lg-6">
                        <label for="county" class="col-sm-4 required">@Resources.County</label>
                        <div class="col-sm-8">
                            @Helpers.BootstrapDropdown("county", true, true)
                        </div>
                    </div>

                    <div class="col-xs-6 col-sm-12 col-lg-6">
                        <label for="city" class="col-sm-4 required">@Resources.City</label>
                        <div class="col-sm-8">
                            <input maxlength="100" type="text" class="width_100p" id="city" name="city" required>
                        </div>
                    </div>
                </div>

                <div class="row margin-top-25 nopad">
                    <div id="panel-address-results" class="col-sm-12"></div>
                </div>

                <div class="row margin-bottom-15">
                    <div class="col-sm-12 btn-action-group clearfix">
                        <div class="text-center hidden-xs hidden-sm">
                            <button type="button" class="btn btn-primary addAddress"><i class="fa fa-plus"></i> @Resources.Add</button>
                            <button type="button" class="btn btn-primary saveAddress"><i class="fa fa-check"></i> @Resources.Apply</button>
                            <button type="button" class="btn btn-default deleteAddress"><i class="fa fa-times"></i> @Resources.Delete</button>
                        </div>
                        <div class="text-center hidden-md hidden-lg">
                            <button type="button" class="btn btn-primary addAddress"><i class="fa fa-plus"></i> @Resources.Add</button>
                            <button type="button" class="btn btn-primary saveAddress"><i class="fa fa-check"></i> @Resources.Apply</button>
                            <button type="button" class="btn btn-default deleteAddress"><i class="fa fa-times"></i> @Resources.Delete</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script id="address-results-template" type="text/x-handlebars-template">
    <table class="table table-striped table-condensed table-hover">
        <tr>
            <th>&nbsp;</th>
            <th>@Resources.TypeOfAddress</th>
            <th>@Resources.Address</th>
            <th>@Resources.Door</th>
            <th>@Resources.Floor</th>
            <th>@Resources.PostalCode</th>
            <th>@Resources.City</th>
            <th>@Resources.County</th>
            <th>@Resources.District</th>
        </tr>
        {{#each this}}
        {{#ifNotCond addressEntityState 3}}
        <tr data-selectable data-index="{{@@index}}">
            <td>
                {{#ifCond addressEntityState 1}}
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                {{/ifCond}}
                {{#ifCond addressEntityState 2}}
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                {{/ifCond}}
            </td>
            <td>{{addressTypeDescription}}</td>
            <td>{{street}}</td>
            <td>{{door}}</td>
            <td>{{floor}}</td>
            <td>{{postalCode}}</td>
            <td>{{city}}</td>
            <td>{{countyDescription}}</td>
            <td>{{districtDescription}}</td>
        </tr>
        {{/ifNotCond}}
        {{/each}}
    </table>
</script>
