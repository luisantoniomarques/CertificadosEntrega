<div id="partialView">
    <div class="page-title clearfix">
        <div class="col-sm-12">
            <h1>@Resources.ApplicationName &ndash; @Resources.Management</h1>
        </div>
    </div>
    <div class="body-content">
        <div class="col-sm-12">
            <div class="panel-heading"><i class="fa fa-user"></i> @Resources.GeneralInfo &ndash; @Resources.Private</div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        @Html.Partial("Nif")
                    </div>

                    <div class="row margin-top-15">
                        <div class="col-xs-6 col-sm-12 col-lg-6">
                            <label for="greeting" class="col-sm-4">@Resources.Greeting</label>
                            <div class="col-sm-8">
                                @Helpers.BootstrapDropdown("greeting", false, false)
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-6 col-sm-12 col-lg-6">
                            <label for="name" class="col-sm-4 required">@Resources.FirstName</label>
                            <div class="col-sm-8">
                                <input maxlength="150" type="text" class="width_100p" id="name" name="name" required aria-required="true">
                            </div>
                        </div>

                        <div class="col-xs-6 col-sm-12 col-lg-6">
                            <label for="surname" class="col-sm-4 required">@Resources.Surname</label>
                            <div class="col-sm-8">
                                <input maxlength="100" type="text" class="width_100p" id="surname" name="surname" required aria-required="true">
                            </div>
                        </div>

                        <div class="col-xs-6 col-sm-12 col-lg-6">
                            <label for="gender" class="col-sm-4 required">@Resources.Gender</label>
                            <div class="col-sm-8">
                                @Helpers.BootstrapDropdown("gender", false, true)
                            </div>
                        </div>

                        <div class="col-xs-6 col-sm-12 col-lg-6">
                            <label for="dob" class="col-sm-4">@Resources.DateOfBirth</label>
                            <div class="col-sm-8">
                                <div class="datepicker-wrapper">
                                    <input type="text" class="width_100p datepicker" id="dob" name="dob" date>
                                    <span><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-6 col-sm-12 col-lg-6">
                            <label for="maritalStatus" class="col-sm-4">@Resources.MaritalStatus</label>
                            <div class="col-sm-8">
                                @Helpers.BootstrapDropdown("maritalStatus", false, false)
                            </div>
                        </div>

                        <div class="col-xs-6 col-sm-12 col-lg-6">
                            <label for="job" class="col-sm-4">@Resources.Job</label>
                            <div class="col-sm-8">
                                <input maxlength="200" type="text" class="width_100p" id="job">
                            </div>
                        </div>

                        <div class="col-xs-6 col-sm-12 col-lg-6">
                            <label for="education" class="col-sm-4">@Resources.Education</label>
                            <div class="col-sm-8">
                                @Helpers.BootstrapDropdown("education", false, false)
                            </div>
                        </div>

                        <div class="col-xs-6 col-sm-12 col-lg-6">
                            <label for="state" class="col-sm-7 col-md-6">@Resources.HandicapedQuestion</label>
                            <div class="form-group radio-inline col-sm-5 col-md-6">
                                <input type="radio" id="handicapped-yes" name="handicapped" value="true"><label for="handicapped-yes">@Resources.Yes</label>
                                <input type="radio" id="handicapped-no" name="handicapped" value="false" checked="checked"><label for="handicapped-no">@Resources.No</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>