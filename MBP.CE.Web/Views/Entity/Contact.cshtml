
<div class="col-sm-12">
    <div class="panel-heading"><i class="fa fa-phone"></i> @Resources.Contact</div>
    <div class="panel panel-default">
        <div class="panel-body">
            <form id="form-contact">
                <div class="row nopad">
                    <div class="col-sm-12 margin-bottom-15">
                        @Resources.OneEmailAndOnePhone
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6 col-sm-12 col-md-6">
                        <label for="typeOfContact" class="col-sm-12 col-lg-2 required">@Resources.Type</label>
                        <div class="col-sm-5 col-md-5 col-lg-4">
                            @Helpers.BootstrapDropdown("typeOfContact", false, true)
                        </div>
                        <div class="col-sm-7 col-lg-6">
                            <input maxlength="100" type="text" id="contactValue" name="contactValue" required>
                        </div>
                    </div>

                    <div class="col-xs-6 col-sm-12 col-md-6">
                        <label for="availability" class="col-sm-12 col-lg-4 required">@Resources.Disponibility</label>
                        <div class="col-sm-12 col-lg-8">
                            @Helpers.BootstrapDropdown("availability", false, true)
                        </div>
                    </div>
                </div>

                <div class="row margin-top-25 nopad">
                    <div id="panel-contact-results" class="col-sm-12"></div>
                </div>

                <div class="row margin-bottom-15">
                    <div class="col-sm-12 btn-action-group clearfix">
                        <div class="text-center hidden-xs hidden-sm">
                            <button type="button" class="btn btn-primary addContact"><i class="fa fa-plus"></i> @Resources.Add</button>
                            <button type="button" class="btn btn-primary saveContact"><i class="fa fa-check"></i> @Resources.Apply</button>
                            <button type="button" class="btn btn-default deleteContact"><i class="fa fa-times"></i> @Resources.Delete</button>
                        </div>
                        <div class="text-center hidden-md hidden-lg">
                            <button type="button" class="btn btn-primary addContact"><i class="fa fa-plus"></i> @Resources.Add</button>
                            <button type="button" class="btn btn-primary saveContact"><i class="fa fa-check"></i> @Resources.Apply</button>
                            <button type="button" class="btn btn-default deleteContact"><i class="fa fa-times"></i> @Resources.Delete</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script id="contact-results-template" type="text/x-handlebars-template">
    <table class="table table-striped table-condensed table-hover">
        <tr>
            <th>&nbsp;</th>
            <th>@Resources.Type</th>
            <th>@Resources.Contact</th>
            <th>@Resources.Disponibility</th>
        </tr>
        {{#each this}}
        {{#ifNotCond contactEntityState 3}}
        <tr data-selectable data-index="{{@@index}}">
            <td>
                {{#ifCond contactEntityState 1}}
                <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                {{/ifCond}}
                {{#ifCond contactEntityState 2}}
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                {{/ifCond}}
            </td>
            <td>{{contactTypeDescription}}</td>
            <td>{{contactValue}}</td>
            <td>{{contactAvailabilityDescription}}</td>
        </tr>
        {{/ifNotCond}}
        {{/each}}
    </table>
</script>
